<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
      "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hbm2ddl.auto">Update</property>
		<property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/myhiber</property>
		<property name="connection.username">root</property>
		<property name="connection.password">admin</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<mapping class="com.entity.Note"></mapping>
		<mapping class="com.entity.Address"></mapping>
		<mapping class="com.map.Answer"></mapping>
		<mapping class="com.map.Questions"></mapping>
		<mapping class="com.map1.Emp"></mapping>
		<mapping class="com.map1.Project"></mapping>
		
		
		
	</session-factory>
</hibernate-configuration> 